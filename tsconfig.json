{
	"compilerOptions": {
		"target": "ES2020",
		"allowJs": true,
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"moduleResolution": "node"
	},
	"include": ["src/**/*", "**/*.ts"],
	"exclude": ["node_modules"]
}
